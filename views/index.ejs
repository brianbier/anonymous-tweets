<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Tweeter</title>
  <link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css'>
  <link rel="stylesheet" href="style.css">
</head>
<body>

  <h1 class="leader-h">Anonymous Tweeter</h1>

  <div class="tweet-container">
    <form action='tweet' method="post">
    <input placeholder="Say something . . ." type="text" name="content" class="new-tweet-input" id="new-tweet">
    <button class="btn-tweet" id="tweet">Tweet</button>
    </form>
  </div>

  <div class="tweets" id="tweets-target">
    <% posts.forEach(function(post) { %>
      <div class='tweet-container'>
        <div class='tweet-time'><%= post.createdAt %> </div>
        <% debugger %>
        <div class='tweet-body'><%= post.content %> </div>
      </div>
    <% }) %>
  </div>

  <script src="http://code.jquery.com/jquery-2.1.1.min.js"></script>
  <script src="tweet.js"></script>
</body>
</html>